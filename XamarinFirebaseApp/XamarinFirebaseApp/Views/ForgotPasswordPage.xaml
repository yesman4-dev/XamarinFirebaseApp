<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFirebaseApp.Views.ForgotPasswordPage">
    <ContentPage.Content>
        <StackLayout Padding="15"
                     VerticalOptions="Center"
                     >
            <Label Text="Reseteo de clave"
                   FontSize="Large"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"></Label>
            <Entry Placeholder="Ingresa tu correo para recuperar la clave"
                   x:Name="TxtEmail"></Entry>
            <Button Text="Enviar enlace de verificacion"
                    x:Name="ButtonSendLink"
                    Clicked="ButtonSendLink_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>