<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinFirebaseApp.Views.HomePage" NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout Padding="16">
            
            <Label Text="Bienvenido a la pagina de inicio"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            
            <Label Text="" x:Name="LblUser"
                   FontSize="Large"
                   VerticalOptions="Center"></Label>
            
            <Button Text="Ver listado de contactos"
                    x:Name="BtnStudentList"
                    Clicked="BtnStudentList_Clicked"></Button>
            
           
            <Button Text="Cambiar mi clave" x:Name="BtnChangePassword" Clicked="BtnChangePassword_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>